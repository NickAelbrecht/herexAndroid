<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragments.ProfileFragment"
                                             android:background="?android:windowBackground">
    <ImageView
            android:layout_width="290dp"
            android:layout_height="332dp"
            android:id="@+id/imageView4"
            android:layout_marginTop="132dp" app:layout_constraintTop_toBottomOf="@+id/profiel_textTop"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="75dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
            android:src="@mipmap/profile_avatar"
            android:contentDescription="@string/profielafbeelding"/>
    <TextView
            android:text="@string/profiel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profiel_textTop" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="92dp"
            android:textSize="24sp" android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profiel_naam"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" android:hint="@string/naam" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/profiel_textTop" android:layout_marginTop="548dp"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profiel_email"
            app:layout_constraintTop_toBottomOf="@+id/profiel_naam" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="64dp" android:hint="@string/email"
            android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/uitloggen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profiel_btn_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toBottomOf="@+id/profiel_email"
    />
    <TextView
            android:text="@string/naam_dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/profiel_textTop" android:layout_marginTop="548dp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/email_dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="24sp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>