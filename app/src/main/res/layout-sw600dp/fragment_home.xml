            android:text="Hou makkelijk bij welk recept, welke producten nodig heeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="8dp"
