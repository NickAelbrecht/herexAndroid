<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragments.ProfileFragment"
                                             android:background="?android:windowBackground">
    <ImageView
            android:layout_width="160dp"
            android:layout_height="250dp"
            android:id="@+id/imageView4"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/profiel_textTop"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:src="@mipmap/profile_avatar"
            android:contentDescription="@string/profielafbeelding"/>
    <TextView
            android:text="@string/profiel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profiel_textTop" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            android:textSize="24sp" android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profiel_naam"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:hint="@string/naam" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/profiel_textTop" android:layout_marginTop="64dp"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="24dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/profiel_email"
            app:layout_constraintTop_toBottomOf="@+id/profiel_naam" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="64dp" android:hint="@string/email"
            android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="@string/uitloggen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profiel_btn_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/profiel_email" app:layout_constraintHorizontal_bias="0.499"
    />
    <TextView
            android:text="@string/naam_dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/profiel_textTop"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"/>
    <TextView
            android:text="@string/email_dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="24sp" app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginStart="8dp"
    />
</android.support.constraint.ConstraintLayout>