<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragments.UserFragment"
                                             android:background="?android:windowBackground"

>

    <ImageView
            android:layout_width="222dp"
            android:layout_height="228dp"
            android:id="@+id/imageView"
            android:src="@mipmap/profile_avatar"
            android:layout_marginTop="90dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:srcCompat="@tools:sample/avatars[5]" app:layout_constraintHorizontal_bias="0.04"
            android:contentDescription="User pic"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            android:background="@android:color/darker_gray"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>

    <Button
            android:text="Registreer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register"
            android:background="@android:color/darker_gray"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Als je al een account hebt kan je meteen inloggen, anders moet je je eerst registreren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:textAlignment="center" android:textSize="24sp"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>