<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragments.RegisterFragment"
                                             android:background="?android:windowBackground"
>


    <TextView
            android:text="Vul de gegevens in om te registreren"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_textWelcome" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:fontFamily="monospace"
            android:adjustViewBounds="true" android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Welkom!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/register_textWelcome2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:fontFamily="monospace"
            android:adjustViewBounds="true" android:textAlignment="center"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Naam"
            android:ems="10"
            android:id="@+id/register_naam" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/register_textWelcome" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/register_email"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/register_naam"
            android:text="email "/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_password" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/register_email" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="passwoord"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_password_confirm"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/register_password" android:hint="bevestig passwoord"/>
    <Button
            android:text="Registratie voltooien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_register_complete" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/register_password_confirm" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>